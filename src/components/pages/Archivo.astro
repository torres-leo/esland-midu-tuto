---
import Layout from '@layout';
import Hero from '@components/Hero.astro';
import Button from '@components/Button';

import { getI18N } from '@i18n';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout description='Archivo' title='Archivo - ESLAND'>
	<Hero img='/images/archivo-background.webp'>
		<div class='absolute w-full h-full flex flex-col items-center justify-center inset-0 gap-y-10'>
			<h2 class='text-5xl uppercase font-tomaso tracking-wider'>{i18n.ARCHIVO_PAGE.HERO.text}</h2>
			<Button className='animate-fade-up relative' url='https://www.youtube.com/watch?v=1YmpPrqKP-g'>
				{i18n.ARCHIVO_PAGE.HERO.btnText}
			</Button>
		</div>
	</Hero>
	<main></main>
</Layout>
