---
import { getI18N } from '@i18n';
import Button from './Button';
import Logo from '@svgs/logo.astro';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class='relative h-dvh w-full max-w-[100vw] md:aspect-video md:h-[80vh] xl:h-full'>
	<div class='absolute left-1/2 right-0 top-14 z-10 m-auto flex -translate-x-1/2 flex-col items-center w-full'>
		<section
			class='animate-fade-up flex justify-center items-center gap-14 flex-col aspec-[343/350] md:aspect-[343/160] 2xl:aspect-[343/260]'>
			<h1 class='flex items-center gap-5 text-4xl md:text-6xl lg:gap-20 lg:text-8xl font-tomaso'>
				<span>E</span>
				<span>S</span>
				<span>L</span>
				<Logo class='h-9 w-auto md:h-[3.75rem] lg:h-24 scale-125' aria-label='A' />
				<span>N</span>
				<span>D</span>
			</h1>
			<p class='subtitle text-xl lg:text-2xl text-center text-wrap font-jura mb-0'>
				Premios a la comunidad hispanohablante de streaming
			</p>
			<Button
				className='animate-fade-up relative'
				url='https://www.youtube.com/watch?v=1YmpPrqKP-g'
				set:html={i18n.VIDEO_BUTTON}
			/>
		</section>
	</div>

	<video
		class='w-full cp-v h-screen object-cover object-top animate-fade animate-ease-in-out animate-duration-[2s]'
		src='/esland-video.webm'
		autoplay
		loop
		muted
		'>
	</video>

	<video
		class='absolute
		-bottom-48
		blur-3xl
		-z-40 w-full animate-duration-[2s] animate-ease-in-out'
		src='/esland-video.webm'
		autoplay
		loop
		muted></video>
</div>

<style>
	@font-face {
		font-family: 'Jura';
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url('/fonts/jura.woff2') format('woff2');
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329,
			U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	.subtitle {
		text-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
	}
</style>
